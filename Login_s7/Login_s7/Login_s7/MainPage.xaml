<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Login_s7.MainPage"
             BackgroundColor="#112B47"
             >

    <ContentPage.Content>
    <StackLayout Padding="40" VerticalOptions="Center" HorizontalOptions="FillAndExpand">

            <Image Source="noson.png" WidthRequest="180" HeightRequest="180"></Image>

            <Entry Placeholder="Correo Electronico" TextColor="White" PlaceholderColor="Gray" Keyboard="Email" Text="{Binding}"></Entry>
        <Entry Placeholder="Contraseña" TextColor="White" PlaceholderColor="Gray" Text="{Binding}" IsPassword="True" Keyboard="Text"></Entry>
        <Button
            VerticalOptions="Center"
            Text="Ingresar"
            TextColor="White"
            BackgroundColor="Transparent"
            BorderWidth="1.5"
            CornerRadius="50"
            Command="{Binding}"
            ></Button>
    </StackLayout>
   </ContentPage.Content>
</ContentPage>
